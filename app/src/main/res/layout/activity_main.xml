<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backG"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="416dp"
        android:layout_height="417dp"
        android:background="@color/backTablet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonDegree"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="^"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="%"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonDivision"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="÷"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonClear34"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="D"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="C"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttoSqrt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="√"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="9"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonMult"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="*"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonPi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="Pi"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="-"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonFactual"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="!"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="3"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="+"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <Button
                android:id="@+id/buttonDi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="^(-1)"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttoEx"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="е"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butto0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttoPoint"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="."
                android:textSize="30dp" />

            <Button
                android:id="@+id/buttonEqually"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="1dp"
                android:background="@drawable/roundedbutton"
                android:text="="
                android:textSize="30dp" />
        </TableRow>
    </TableLayout>

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="407dp"
        android:layout_height="245dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>